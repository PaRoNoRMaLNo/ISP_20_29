<Window x:Class="ISp_20_20.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISp_20_20"
        mc:Ignorable="d"
        Title="Окно Администратора"
        Height="450"
        FontSize="18"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Icon="/1676950053044.jpg"
        ResizeMode="NoResize">
    <Grid>
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Margin="15,25,25,15"
                      Grid.Column="0">
            <StackPanel x:Name="Clients"
                        
                        Background="Red" />
        </ScrollViewer>
        <Button x:Name="LoadDataBtn"
                Grid.Column="1"
                Content="Load"
                HorizontalAlignment="Left"
                Margin="35,24,0,0"
                VerticalAlignment="Top"
                Height="55"
                Width="115"
                Click="LoadDataBtn_Click" />
    </Grid>
</Window>
